layout layout-mangapu-elevation
	symbol-hide group cave-centerline     #1. hides all centrelines, incl station-names - clears the canvas
	map-header 10 10 nw
	scale 1 1000

endlayout layout-mangapu-elevation


layout layout-mangapu-elevation-raw
